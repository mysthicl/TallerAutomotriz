
@{
    ViewData["Title"] = "Reparacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
	<link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.min.css">
	<link rel="stylesheet" href="~/vendor/datatables/extensiones/css/responsive.dataTables.min.css">
	<link rel="stylesheet" href="~/vendor/datatables/extensiones/css/buttons.dataTables.min.css">
	<script src="https://cdn.datatables.net/plug-ins/1.11.5/sorting/datetime-moment.js"></script>
}


<div class="card shadow mb-4">
	<div class="card-header py-3 bg-second-primary">
		<h6 class="m-0 font-weight-bold text-white">Lista de Reparaciones</h6>
	</div>
	<div class="card-body">
		<div class="row">
			
		</div>
		<hr />
		<div class="row">
			<div class="col-sm-12">
				<table class="table table-sm table-striped" id="tbdata" cellspacing="0" style="width:100%">
					<thead>
						<tr>
							<th>ID</th>
                            <th>IDR</th>
                            
							<th>Mecanico</th>
							<th>Placa</th>
							<th>Marca</th>
							<th>Descripcion</th>
							<th>Fecha de Entrada</th>
							<th>Fecha de Salida</th>
							<th>Estado</th>
							<th>Numero Seguimiento</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<!--  Modal-->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6>Detalle Compra</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    <label for="txtFechaRegistro">Fecha de Entrada</label>
                                    <input type="text" class="form-control form-control-sm" id="txtFechaRegistro" disabled>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="txtNumVenta">Fecha de Salida</label>
                                    <input type="text" class="form-control form-control-sm" id="txtFechaSalida" disabled>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="txtUsuarioRegistro">Numero seguimiento</label>
                                    <input type="text" class="form-control form-control-sm" id="txtNumeroSeguimiento" disabled>
                                    <input type="text" class="form-control form-control-sm" id="txtID" hidden />
                                    <input type="text" class="form-control form-control-sm" id="txtIDHis" hidden>
                                    <input type="text" class="form-control form-control-sm" id="txtIDUser" hidden>
                                    <input type="text" class="form-control form-control-sm" id="txtDescripcion" hidden>
                                    <input type="text" class="form-control form-control-sm" id="txtIDCotizacion" hidden>

                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    <label for="txtSubTotal">Placa</label>
                                    <input type="text" class="form-control form-control-sm" id="txtPlaca" disabled>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="txtIGV">Marca</label>
                                    <input type="text" class="form-control form-control-sm" id="txtMarca" disabled>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="txtTotal">Estado</label>
                                    <select style="" class="form-control form-control-sm " id="cboEstado">
                                        <option value="" selected disabled>-Seleccionar Estado-</option>
                                        <option value="Revision">Revision</option>
                                        <option value="Reparacion">Reparacion</option>
                                        <option value="Finalizado">Finalizado</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    <label for="txtSubTotal">Sub Total</label>
                                    <input type="text" class="form-control form-control-sm" id="txtSubTotal" disabled>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="txtIGV">IVA</label>
                                    <input type="text" class="form-control form-control-sm" id="txtIGV" disabled>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="txtTotal">Total</label>
                                    <input type="text" class="form-control form-control-sm" id="txtTotal" disabled>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="tbProductos" class="table table-sm table-striped">
                                        <thead>
                                            <tr>
                                                <th>Producto</th>
                                                <th>Cantidad</th>
                                                <th>Precio</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a href="" class="btn btn-primary btn-sm" target="_blank" id="linkImprimir">Imprimir</a>
                <button class="btn btn-danger btn-sm" type="button" id="btnEditar">Editar</button>
                <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
	<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
	<script src="https://cdn.datatables.net/plug-ins/1.11.5/sorting/datetime-moment.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
	<script src="https://cdn.datatables.net/plug-ins/1.11.5/sorting/datetime-moment.js"></script>
	<script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
	<script src="https://cdn.datatables.net/buttons/1.7.0/js/dataTables.buttons.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.7.1/jszip.min.js"></script>
	<script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.html5.min.js"></script>
	<script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.print.min.js"></script>

	<script src="~/js/vistas/NewHistory.js"></script>
}




