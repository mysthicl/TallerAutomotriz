
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/responsive.dataTables.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/buttons.dataTables.min.css">

}


<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Lista de Productos</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
                <button class="btn btn-success" id="btnAgregar" data-toggle="modal" data-target="#modalData"><i class="fas fa-plus-circle"></i> Nuevo Producto</button>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%; text-align:center">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Imagen</th>
                            <th>Codigo del Producto</th>
                             <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Precio</th>
                            <th>Porcentaje Ganancia</th>
                            <th>Stock</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--  Modal-->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6>Detalle Producto</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" value="0" id="txtId">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtCodigoProducto">Codigo del producto</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtCodigoProducto" name="Codigo del producto">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtNombre">Nombre</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtNombre" name="Nombre">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    <label for="txtStock">Stock</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtStock" name="Stock">
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="txtPrecio">Precio</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtPrecio" name="Precio">
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="txtGanancia">% ganancia</label>
                                    <input type="number" class="form-control form-control-sm input-validar" id="txtGanancia" name="Ganancia">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-12">
                                    <label for="txtDescripcion">Descripcion</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtDescripcion" name="Descripcion">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtImagen">Imagen</label>
                                    <input class="form-control-file " type="file" id="txtImagen" name="Imagen" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <img id="imgProducto" style="max-width:200px;" src="https://cdn-icons-png.flaticon.com/512/1514/1514380.png" class="rounded mx-auto d-block" alt="...">
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script src="vendor/datatables/extensiones/js/dataTables.responsive.min.js"></script>

    <script src="vendor/datatables/extensiones/js/dataTables.buttons.min.js"></script>
    <script src="vendor/datatables/extensiones/js/jszip.min.js"></script>
    <script src="vendor/datatables/extensiones/js/buttons.html5.min.js"></script>
    <script src="vendor/datatables/extensiones/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

    <script src="~/js/vistas/Producto.js"></script>
    
}